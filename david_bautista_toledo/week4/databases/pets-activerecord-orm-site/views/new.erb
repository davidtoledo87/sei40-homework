
<h1>Add new Pet</h1>

<form action="/pets" method="post">

  <label>
    Name:
    <input type="text" name="name">
  </label>
  <br>

  <label>
    Species:
    <input type="text" name="species">
  </label>
  <br>

  <label>
    Description:
    <input  name="description">
  </label>
  <br>

  <label>
    Age:
    <input type="text" name="age">
  </label>
  <br>

  <label>
    Alive:
    <input type="text" name="alive">
  </label>
  <br>

  <label>
    Roundness:
    <input type="text" name="roundness">
  </label>
  <br>

  <label>
    Owner:
    <select name = "owner-id" >

      <button class="dropbtn">Owners</button>
      <div class="dropdown-content">
        <% @owners.each do |owner| %>
        <p><%=owner.name %><p>
        <% end %>
      </div>

  </label>
  <br>










  <label>
    Image URL:
    <input type="text" name="image_url">
  </label>
  <br>

  <input type="submit" value="Add Pet">

</form>
